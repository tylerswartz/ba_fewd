<div class="nav">
	<div class="headline">
		<h1 class="logo">RetFlix</h1>
		<h3>See our collection of movies below</h3>
	</div>
</div>
<div class="search-form">
	<%= form_tag movies_path, method: 'GET' do%>
		<%= text_field_tag :q, params[:q] %>
		<%= submit_tag 'Search' %>
	<% end %>	
</div>

<div class="table-container">
	<table class="table">
		<tr>
			<th>Title</th>
			<th>Year</th>
			<th>Synopsis</th>
		</tr>
		<% @movies.each do |movie| %>
			<tr>
				<td><%= movie.title %></td>
				<td><%= movie.year_released %></td>
				<td><%= movie.description %></td>
			</tr>
		<% end %>
	</table>
</div>
