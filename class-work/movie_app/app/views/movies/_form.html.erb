<%= form_for(@movie) do |f|%>
  <%= render 'shared/error_messages' %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control'%>

  <%= f.label :year_released %>
  <%= f.text_field :year_released, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>

  <%= f.submit "Add Movie", class: "btn-primary"%>
<% end %> 

